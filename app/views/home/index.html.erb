<h1> Everyone's Gifts</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="gifts">
    <% @gifts.each do |gift| %>
    <tr class="gift">
      <td><%= gift.user.email%></td>
      <td><%= gift.gift_desc %></td>
      <td><%= gift.quantity %></td>
      <td><%= gift.created_at %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Login', new_session_path%>
