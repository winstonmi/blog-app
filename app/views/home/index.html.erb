<h1> Everyone's Posts</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="posts">
    <% @posts.each do |post| %>
    <tr class="post">
      <td><%= post.user.email%></td>
      <td><%= post.title %></td>
      <td><%= post.body %></td>
      <td><%= post.created_at %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Login', new_session_path%>
