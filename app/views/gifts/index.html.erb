<p id="notice"><%= notice %></p>

<div class="center jumbotron">
  <h1>Welcome to IOU</h1>
  <h2>
    Owe your friend Bubur Cha-Cha or a beer for helping you with a favor? Buy them one here!
  </h2>
  <%= link_to "Sign up now!", sign_up_path, class: "btn btn-lg btn-primary" %>
</div>




<h1>Gifts</h1>

<% if user_logged_in? %>
  <h3>Hello, <%= current_user.email %></h3>
  <%= link_to "Logout", logout_path, method: :delete %>
  <%= link_to 'New Gift', new_user_gift_path(current_user) %>
<% else %>
  <%= link_to "Sign Up", sign_up_path %>
  <%= link_to 'Login', new_session_path%>
<% end %>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Gift Description</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="gifts">
    <% @gifts.each do |gift| %>
      <tr class="gift">
        <td><%= gift.user.id %></td>
        <td><%= gift.gift_desc %></td>
        <td><%= gift.quantity %></td>
        <td><%= link_to 'Show', user_gift_path(gift.user, gift) %></td>
        <td><%= link_to 'Edit', edit_user_gift_path(gift.user, gift) %></td>
        <td><%= link_to 'Destroy', user_gift_path(gift.user, gift), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
